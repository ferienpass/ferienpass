{% trans_default_domain 'admin' %}

<div {{ attributes }}>

    <div class="space-y-12">

        <fieldset>
            <legend class="text-base font-semibold leading-6 text-gray-900">{{ 'export.selectExport'|trans }}</legend>

            <div class="mt-4 grid grid-cols-1 gap-y-6 sm:grid-cols-3 sm:gap-x-4">
                {% for exporterName in exporterOptions %}
                    <button
                            data-action="live#emit"
                            data-live-event-param="selectExport"
                            data-live-name-param="{{ exporterName }}"
                            class="{{ export == exporterName ? 'border-indigo-600 ring-2 ring-indigo-600' : 'border-gray-300' }} text-left relative flex cursor-pointer rounded-lg border bg-white p-4 shadow-sm focus:outline-none">
                        <span class="flex flex-1">
                            <span class="flex flex-col">
                                <span id="group-0-label"
                                      class="block text-sm font-medium text-gray-900">{{ "#{exporterName}.0"|trans([], 'export') }}</span>
                                <span id="group-0-description-0"
                                      class="mt-1 flex items-center text-sm text-gray-500">{{ "#{exporterName}.1"|trans([], 'export') }}</span>
                            </span>
                        </span>
                        {% if export == exporterName %}
                            <svg class="h-5 w-5 text-indigo-600" viewBox="0 0 20 20" fill="currentColor"
                                 aria-hidden="true">
                                <path fill-rule="evenodd"
                                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                                      clip-rule="evenodd"/>
                            </svg>
                        {% endif %}
                        <span aria-hidden="true"
                              class="{{ export == exporterName ? 'border-indigo-600' : 'border-transparent' }} pointer-events-none absolute -inset-px rounded-lg border-2"></span>
                    </button>
                {% endfor %}
            </div>
        </fieldset>

        {% if export %}
            <fieldset>
                <legend class="text-sm font-semibold leading-6 text-gray-900">Saisons</legend>
                <p class="mt-1 text-sm leading-6 text-gray-600">Nur Angebote in einer dieser Saisons.</p>
                <div class="mt-4 space-y-2">
                    {% for edition in editionOptions %}
                        <div class="relative flex gap-x-3">
                            <div class="flex items-center">
                                <input id="editions{{ loop.index }}"
                                       data-model="editions[]"
                                       type="checkbox"
                                       value="{{ edition.id }}"
                                       class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                            </div>
                            <div class="text-sm leading-6">
                                <label for="editions{{ loop.index }}"
                                       class="font-medium text-gray-900">{{ edition.name }}</label>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </fieldset>

            <fieldset>
                <legend class="sr-only">Notifications</legend>
                <div class="space-y-5">
                    <div class="relative flex items-start">
                        <div class="flex h-6 items-center">
                            <input id="comments" data-model="onlyPublished"
                                   aria-describedby="comments-description"
                                   name="comments" type="checkbox"
                                   class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                        </div>
                        <div class="ml-3 text-sm leading-6">
                            <label for="comments" class="font-medium text-gray-900">Nur veröffentlichte:</label>
                            <span id="comments-description" class="text-gray-500">Angebote ausblenden, die nicht
                                veröffentlicht sind.</span>
                        </div>
                    </div>
                </div>
            </fieldset>

            <div>
                <button type="button"
                        data-action="live#action:prevent"
                        data-live-action-param="submit"
                        class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    {{ 'export.button'|trans }}
                </button>
            </div>
        {% endif %}

    </div>

</div>
