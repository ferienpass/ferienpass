{% extends "@FerienpassAdmin/layout/list.html.twig" %}


{% block list %}
    {{ component('Admin:SearchableQueryableList', {
        qb: qb,
        filterType: filterType,
        routeName: app.request.get('_route'),
        routeParameters: app.request.query.all,
        searchable: searchable,
        config: {
            columns: {
                name: '{{ item.name }}',
                email: '{{ item.email }}',
                phone: '{{ item.phone }}',
                accounts: '{{ item.users|map(u => "#{u.firstname} #{u.lastname}")|join(", ") }}',
                numberOffers: '{{ item.offers|length }}',
            }
        }}) }}
{% endblock %}
