{% extends "@FerienpassAdmin/layout/login.html.twig" %}

{% block content %}

    <h2 class="mb-4">Einladung </h2>

    {% if error is defined %}
        <alert-error>{{ error|trans([], 'contao_default') }}</alert-error>
    {% endif %}

    {% if host is defined %}
        <p class="mt-2 mb-4 text-sm leading-5 text-gray-600 _dark:text-gray-200 max-w">
            Sie wurden eingeladen, an den Ferienpass-Angeboten von {{ host.name }} mitzuarbeiten.</p>
    {% endif %}

    {% if invitee_email is defined %}
        {% include '@FerienpassAdmin/components/alert/info.html.twig' with {
            message: 'Diese Einladung wurde an '~ invitee_email~' geschickt.' } %}
    {% endif %}

    {% if form is defined %}
        {{ form(form) }}
    {% endif %}

{% endblock %}
