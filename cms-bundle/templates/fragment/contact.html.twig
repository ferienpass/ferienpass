<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
<div class="py-12 sm:py-16">
    <div class="relative max-w-7xl mx-auto lg:grid lg:grid-cols-5">
        <div class="py-16 px-4 sm:px-6 lg:col-span-2 lg:px-8 lg:py-24 xl:pr-12">
            <div class="max-w-lg mx-auto">
                <h2 class="text-2xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-3xl sm:leading-9">
                    {{ headline }}
                </h2>
                <div class="mt-3 text-lg leading-6 text-gray-500">
                    {{ text|raw }}
                </div>
                <dl class="mt-8 text-base leading-6 text-gray-500">
                    {% if address is not empty %}
                    <div>
                        <dt class="sr-only">Postanschrift</dt>
                        <dd>
                            <p>{{ address|nl2br }}</p>
                        </dd>
                    </div>
                    {% endif %}
                    {% if phone is not empty %}
                    <div class="mt-6">
                        <dt class="sr-only">Telefonnummer</dt>
                        <dd class="flex">
                            <svg class="flex-shrink-0 h-6 w-6 text-gray-400" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
                                <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                            <span class="ml-3">{{ phone }}</span>
                        </dd>
                    </div>
                    {% endif %}
                    {% if email is not empty %}
                    <div class="mt-3">
                        <dt class="sr-only">E-Mail-Adresse</dt>
                        <dd class="flex">
                            <svg class="flex-shrink-0 h-6 w-6 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            {% set mailto = 'mailto:'~email %}
                            <a href="{{ mailto|encodeEmail }}" class="ml-3 hover:underline">{{ email|encodeEmail }}</a>
                        </dd>
                    </div>
                    {% endif %}
                </dl>
            </div>
        </div>
        <div class="bg-white overflow-hidden shadow rounded-lg py-16 px-4 sm:px-6 lg:col-span-3 lg:py-24 lg:px-8 xl:pl-12">
            <div class="max-w-lg mx-auto lg:max-w-none">
                {{ form|raw }}
            </div>
        </div>
    </div>
</div>
</div>