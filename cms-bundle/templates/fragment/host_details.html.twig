<div class="max-w-5xl mx-auto sm:px-6 lg:px-8">

    <div class="relative bg-white">
        <div class="absolute inset-0">
            <div class="absolute inset-y-0 left-0 w-1/2 bg-gray-50"></div>
        </div>
        <div class="relative max-w-7xl mx-auto lg:grid lg:grid-cols-6">
            <div class="bg-white py-16 px-4 sm:px-6 lg:col-span-4 lg:py-24 lg:px-8 xl:pl-12">
                <div class="max-w-lg mx-auto lg:max-w-none">
                    {% if host.logo|default %}
                        <div class="mb-8 -mt-6">
                            {{ contao_figure(host.logo, '_host_details_logo') }}
                        </div>
                    {% endif %}
                    <h1 class="mb-6">{{ host.name }}</h1>
                    <div class="text-gray-500 text-lg">{{ host.text|encodeEmail }}</div>
                    <div class="mt-4">
                        <a href="javascript:history.back()" class="font-medium text-primary-600 hover:underline">&larr;
                            zur√ºck</a>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 py-16 px-4 sm:px-6 lg:col-span-2 lg:px-8 lg:py-24 xl:pr-12">
                <div class="max-w-lg mx-auto">
                    <h2 class="font-semibold text-2xl leading-6">{{ 'Kontakt' }}</h2>
                    <dl class="mt-8 text-base leading-6 text-gray-500">
                        <div>
                            <dt class="sr-only">Anschrift</dt>
                            <dd>
                                <p>
                                    <span>{{ host.street }}</span><br>
                                    <span>{{ host.postal ~' ' ~ host.city }}</span>
                                </p>
                            </dd>
                        </div>
                        <div class="mt-6">
                            <dt class="sr-only">Telefonnummer</dt>
                            <dd class="flex">
                                <svg class="flex-shrink-0 h-6 w-6 text-gray-400" fill="none" stroke="currentColor"
                                     stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                     viewBox="0 0 24 24">
                                    <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                                <span class="ml-3">{{ host.phone }}</span>
                            </dd>
                        </div>
                        {% if host.fax|trim('-') %}
                            <div class="mt-3">
                                <dt class="sr-only">Faxnummer</dt>
                                <dd class="flex">
                                    <svg class="flex-shrink-0 h-6 w-6 text-gray-400" fill="none" stroke-linecap="round"
                                         stroke-linejoin="round" stroke-width="2" stroke="currentColor"
                                         viewBox="0 0 24 24">
                                        <path d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                                    </svg>
                                    <span class="ml-3">{{ host.fax }}</span>
                                </dd>
                            </div>
                        {% endif %}
                        <div class="mt-3">
                            <dt class="sr-only">E-Mail-Adresse</dt>
                            <dd class="flex">
                                <svg class="flex-shrink-0 h-6 w-6 text-gray-400" stroke="currentColor" fill="none"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                                {% set mailto = 'mailto:'~host.email %}
                                <a href="{{ mailto|encodeEmail }}"
                                   class="ml-3 hover:underline">{{ host.email|encodeEmail }}</a>
                            </dd>
                        </div>
                        <div class="mt-3">
                            <dt class="sr-only">Webseite</dt>
                            <dd class="flex">
                                <svg class="flex-shrink-0 h-6 w-6 text-gray-400" fill="none" stroke-linecap="round"
                                     stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24">
                                    <path d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <a href="{{ host.website }}"
                                   target="_blank"
                                   class="ml-3 hover:underline">{{ host.website|replace({'https://': ''}) }}</a>
                            </dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-16 pb-16">
        {% include '@FerienpassCore/Partial/offer_list.html.twig' with { offers: offers } only %}
    </div>

</div>