{% set classSize = {
    xs: 'px-2.5 py-1.5 text-xs leading-4',
    sm: 'px-3 py-2 text-sm leading-4',
    base: 'px-4 py-2 text-sm leading-5',
    lg:'px-4 py-2 text-base leading-6',
    xl: 'px-6 py-3 text-base leading-6'
} %}
{% set classStyle = {
    primary: 'border border-transparent text-white bg-primary-600 hover:bg-primary-500 focus:outline-none focus:border-primary-700 focus:shadow-outline-primary active:bg-primary-700',
    default: 'border border-gray-300 text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50',
} %}

<div class="py-2">

<span class="inline-flex rounded-md shadow-sm">
<a href="{{ href|raw }}"
   class="inline-flex items-center {{ attribute(classSize, size) }} {{ attribute(classStyle, style) }}font-medium rounded transition ease-in-out duration-150"
        {% if linkTitle is defined %} title="{{ linkTitle|e }}"{% endif %}
        {% if newWindow %} target="_blank"{% endif %}>
    {% if icon|default is not empty %}<span
            class="-ml-1 mr-2 h-5 w-5 block">{% include '@FerienpassCore/Icons/'~icon~'.svg.twig' ignore missing only %}</span>{% endif %}
    {{ link }}
</a>
</span>
</div>