<div class="max-w-5xl mx-auto sm:px-6 lg:px-8">
    <div class="relative bg-white">
        <div class="absolute inset-0">
            <div class="absolute inset-y-0 left-0 w-1/2 bg-gray-50"></div>
        </div>
        <div class="relative max-w-7xl mx-auto lg:grid lg:grid-cols-6">
            <div class="bg-white py-16 px-4 sm:px-6 lg:col-span-4 lg:py-24 lg:px-8 xl:pl-12">
                <div class="max-w-lg mx-auto lg:max-w-none">
                    {% block content %}

                        {% if offer.image|default %}
                            <div class="-mt-8 mb-8">
                                {{ contao_figure(offer.image, '_offer_details', { 'metadata': { class: 'object-cover w-full h-auto'}}) }}
                                {% set caption = offer.caption|default %}
                                {% if caption %}
                                    <p class="text-xs pt-1 text-right text-gray-400">{{ caption }}</p>
                                {% endif %}
                            </div>
                        {% endif %}
                        {% if offer.cancelled %}
                            <div class="mb-4">
                                {% include '@FerienpassCore/Alert/error.html.twig' with {message: 'Das Angebot wurde abgesagt.'} %}
                            </div>
                        {% endif %}
                        {% import "@FerienpassCore/Macro/offer.html.twig" as offer_macro %}
                        <h1 class="mb-2">{{ offer.name }}</h1>
                        <div class="font-semibold text-xl text-gray-500 mb-4">{{ offer_macro.age(offer) }}</div>
                        <div class="text-gray-500 text-lg">{{ offer.description|encodeEmail }}</div>
                        <div class="mt-6 text-xl font-semibold">{{ offer_macro.date_combined(offer.dates) }}</div>
                        {% if offer.comment|default %}
                            <p class="text-base text-gray-500">{{ offer.comment }}</p>
                        {% endif %}
                        <div class="mt-6 flex leading-5 flex-wrap">
                            {% if offer.meetingPoint|default %}
                                <div class="flex items-center text-gray-700 text-lg mr-6 mb-2">
                                    <svg class="h-6 w-6 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                              clip-rule="evenodd" fill-rule="evenodd"></path>
                                    </svg>
                                    <span>{{ offer.meetingPoint }}</span>
                                </div>
                            {% endif %}
                            {% if offer.location|default %}
                                <div class="flex items-center text-gray-700 text-lg mr-6 mb-2">
                                    <svg class="h-6 w-6 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                              clip-rule="evenodd" fill-rule="evenodd"></path>
                                    </svg>
                                    <span>{{ offer.location }}</span>
                                </div>
                            {% endif %}
                            {% if offer.bring|default %}
                                <div class="flex items-center text-gray-700 text-lg mr-6 mb-2">
                                    <svg class="h-6 w-6 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 512 512">
                                        <path d="M192,512h128c50.7-0.1,94.3-35.7,104.5-85.3H87.5C97.7,476.3,141.3,511.9,192,512z"/>
                                        <path d="M417.5,287.9c-20,20.5-47.5,32.1-76.2,32.1H320v42.7h-42.7V320h-42.7v42.7H192V320h-21.3c-28.7,0-56.1-11.6-76.2-32.1
	l-9,72.1c-0.1,0.9-0.2,1.8-0.2,2.6v42.7h341.3v-42.7c0-0.9-0.1-1.8-0.2-2.6L417.5,287.9z"/>
                                        <path d="M362.7,85.3H149.3c-35.3,0-64,28.7-64,64v64c0.1,47.1,38.2,85.3,85.3,85.3H192v-21.3h42.7v21.3h42.7v-21.3H320v21.3h21.3
	c47.1-0.1,85.3-38.2,85.3-85.3v-64C426.6,114,398,85.4,362.7,85.3z M320,170.7H192V128h128V170.7z"/>
                                        <path d="M384,21.3C384,9.6,374.4,0,362.7,0H320c-11.8,0-21.3,9.6-21.3,21.3V64H384V21.3z"/>
                                        <path d="M213.3,21.3C213.3,9.6,203.8,0,192,0h-42.7C137.6,0,128,9.6,128,21.3V64h85.3V21.3z"/>
                                    </svg>
                                    <span>{{ offer.bring }}</span>
                                </div>
                            {% endif %}
                            <div class="flex items-center text-gray-700 text-lg mb-2">
                                <svg class="h-6 w-6 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.736 6.979C9.208 6.193 9.696 6 10 6c.304 0 .792.193 1.264.979a1 1 0 001.715-1.029C12.279 4.784 11.232 4 10 4s-2.279.784-2.979 1.95c-.285.475-.507 1-.67 1.55H6a1 1 0 000 2h.013a9.358 9.358 0 000 1H6a1 1 0 100 2h.351c.163.55.385 1.075.67 1.55C7.721 15.216 8.768 16 10 16s2.279-.784 2.979-1.95a1 1 0 10-1.715-1.029c-.472.786-.96.979-1.264.979-.304 0-.792-.193-1.264-.979a4.265 4.265 0 01-.264-.521H10a1 1 0 100-2H8.017a7.36 7.36 0 010-1H10a1 1 0 100-2H8.472c.08-.185.167-.36.264-.521z"
                                          clip-rule="evenodd" fill-rule="evenodd"></path>
                                </svg>
                                <span>{% if offer.fee|default(0) > 0 %}{{ offer.fee/100 }} €{% else %}kostenlos{% endif %}</span>
                            </div>
                        </div>

                    {% endblock content %}
                </div>
            </div>
            <div class="bg-gray-50 py-16 px-4 sm:px-6 lg:col-span-2 lg:px-8 lg:py-24 xl:pr-12">
                <div class="max-w-lg mx-auto">
                    {% block sidebar %}

                        <div class="flex items-center space-x-3">
                            {% for logo in offer.hosts|map(h => h.logo)|filter(v => v) %}
                                <div class="mb-8 -mt-6">
                                    {{ contao_figure(logo, '_host_details_logo') }}
                                </div>
                            {% endfor %}
                        </div>
                        {% for host in offer.hosts %}
                            <h2 class="font-semibold text-xl leading-6">{{ host.name }}</h2>
                            <div class="text-sm mt-1">
                                <a href="{{ path('host_details', { alias: host.alias }) }}"
                                   class="font-medium text-primary-600 hover:underline">Zum Veranstalter &rarr;</a>
                            </div>
                        {% endfor %}
                        {% if offer.onlineApplication and not offer.cancelled %}
                            <div class="text-sm mt-1">
                                <a href="{{ app.request.requestUri }}#anmelden"
                                   class="font-medium text-primary-600 hover:underline">Anmelden &darr;</a>
                            </div>
                        {% endif %}
                        <dl class="mt-8 text-base leading-6 text-gray-500">
                            {% for member in members %}
                                <div class="">
                                    <dt class="sr-only">Ansprechpartner</dt>
                                    <dd class="">
                                        <span class="font-semibold">{{ member.firstname ~' '~member.lastname }}</span>
                                    </dd>
                                </div>
                            {% endfor %}
                            {% if offer.contactUser %}
                                <div class="mt-3">
                                    <dt class="sr-only">Auskunft</dt>
                                    <dd class="flex">
                                        <svg class="flex-shrink-0 h-6 w-6 text-gray-400" fill="none"
                                             stroke="currentColor"
                                             viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span class="ml-3">{{ offer.contactUser.name }}</span>
                                    </dd>
                                </div>
                            {% endif %}
                            {% set phones = members is not empty ? members|filter(m => 'phone' in m.public_fields|split(','))|map(m => m.phone)|filter(p => p)|merge(members|filter(m => 'mobile' in m.public_fields|split(','))|map(m => m.mobile)|filter(m => m)) : offer.hosts|map(h => h.phone)|filter(v => v) %}
                            {% set emails = members is not empty ? members|filter(m => 'email' in m.public_fields|split(','))|map(m => m.email)|filter(e => e) : offer.hosts|map(h => h.email)|filter(v => v) %}
                            {% for phone in phones %}
                                <div class="mt-3">
                                    <dt class="sr-only">Telefon</dt>
                                    <dd class="flex">
                                        <svg class="flex-shrink-0 h-6 w-6 text-gray-400" fill="none"
                                             stroke="currentColor"
                                             stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                             viewBox="0 0 24 24">
                                            <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                        </svg>
                                        <span class="ml-3">{{ phone }}</span>
                                    </dd>
                                </div>
                            {% endfor %}
                            {% for email in emails %}
                                <div class="mt-3">
                                    <dt class="sr-only">E-Mail-Adresse</dt>
                                    <dd class="flex">
                                        <svg class="flex-shrink-0 h-6 w-6 text-gray-400" stroke="currentColor"
                                             fill="none"
                                             viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                        </svg>
                                        {% set mailto = 'mailto:'~email %}
                                        <a href="{{ mailto|encodeEmail }}"
                                           class="ml-3 hover:underline">{{ email|encodeEmail }}</a>
                                    </dd>
                                </div>
                            {% endfor %}
                        </dl>

                        <div class="border-b mt-10 mb-10"></div>
                        {% if offer.cancelled %}
                            <span class="block text-gray-500 font-semibold leading-6">Angebot abgesagt</span>
                            <span class="block text-gray-500 text-sm leading-5">Das Angebot findet nicht mehr statt.
                                Anmeldungen sind nicht möglich.</span>
                        {% else %}
                            {% if offer.requiresApplication|default %}
                                <span class="block text-gray-500 font-semibold leading-6">Anmeldung erforderlich</span>
                                <span class="block text-gray-500 text-sm leading-5">
                                    {% if offer.onlineApplication %}
                                        Verwenden Sie das <a href="{{ app.request.requestUri }}#anmelden"
                                                             class="underline hover:no-underline">unten stehende
                                        Formular</a>, um sich zum Angebot anzumelden.
                                    {% else %}
                                        Bitte melden Sie sich beim Veranstalter.
                                    {% endif %}
                                </span>
                                {% if offer.applyText|default %}
                                    <dl class="mt-3">
                                        <dt class="sr-only">Anmeldungen unter</dt>
                                        <dd class="flex">
                                            <svg class="flex-shrink-0 h-6 w-6 text-gray-400" fill="none"
                                                 stroke="currentColor"
                                                 viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                      stroke-width="2"
                                                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            <span class="ml-2 text-gray-500 text-sm leading-5">{{ offer.applyText|encodeEmail }}</span>
                                        </dd>
                                    </dl>
                                {% endif %}
                            {% else %}
                                <span class="block text-gray-500 font-semibold leading-6">keine Anmeldung
                                    erforderlich</span>
                                <span class="block text-gray-500 text-sm leading-5">Teilnahme ohne Anmeldung
                                    möglich.</span>
                            {% endif %}
                        {% endif %}

                        {% if offer.downloads %}
                            <div class="border-b mt-10 mb-10"></div>
                            <div class="flex">
                                <svg class="flex-shrink-0 h-6 w-6 text-gray-400" fill="currentColor"
                                     viewBox="0 0 30 30">
                                    <path d="M24.5,27H1.5C0.7,27,0,26.3,0,25.5S0.7,24,1.5,24h23.1c0.8,0,1.5,0.7,1.5,1.5S25.3,27,24.5,27z M1.5,25
	C1.2,25,1,25.2,1,25.5S1.2,26,1.5,26h23.1c0.3,0,0.5-0.2,0.5-0.5S24.8,25,24.5,25H1.5z"/>
                                    <path d="M7,23H4c-0.6,0-1-0.4-1-1v-3c0-0.3,0.1-0.5,0.3-0.7l12-12c0.4-0.4,1-0.4,1.4,0l3,3c0.4,0.4,0.4,1,0,1.4
	l-12,12C7.5,22.9,7.3,23,7,23z M5,21h1.6l11-11L16,8.4l-11,11V21z M21,9c-0.3,0-0.5-0.1-0.7-0.3l-3-3c-0.4-0.4-0.4-1,0-1.4l4-4
	c0.4-0.4,1-0.4,1.4,0l3,3c0.4,0.4,0.4,1,0,1.4l-4,4C21.5,8.9,21.3,9,21,9z M19.4,5L21,6.6L23.6,4L22,2.4L19.4,5z"/>
                                    <path d="M11,9c-0.3,0-0.5-0.1-0.7-0.3c-0.4-0.4-0.4-1,0-1.4l5-5c0.4-0.4,1-0.4,1.4,0l2,2c0.4,0.4,0.4,1,0,1.4
	s-1,0.4-1.4,0L16,4.4l-4.3,4.3C11.5,8.9,11.3,9,11,9z"/>
                                </svg>
                                <div class="ml-3">
                                    <h3 class="font-semibold text-base text-gray-700 leading-4">Downloads</h3>
                                    {% for download in offer.downloads %}
                                        <p class="text-gray-500">
                                            <a class="hover:underline"
                                               href="{{ path('offer_details', { alias: offer.alias, file: download|filesModel.path }) }}"
                                            >Datei herunterladen</a>
                                        </p>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}

                        {% block sidebar_add %}{% endblock %}

                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
</div>
