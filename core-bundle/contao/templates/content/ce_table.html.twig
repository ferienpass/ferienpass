{% extends '@Contao/ce_table' %}

{% block content %}

    <div class="py-4">
        <div class="flex flex-col">
            <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
                    <table class="min-w-full divide-y divide-gray-300">
                        {% if summary %}
                            <caption>{{ summary }}</caption>
                        {% endif %}

                        {% if useHeader %}
                            <thead>
                            <tr>
                                {% for col in header %}
                                    <th class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900"
                                        scope="col">{{ col.content }}</th>
                                {% endfor %}
                            </tr>
                            </thead>
                        {% endif %}

                        {% if useFooter %}
                            <tfoot>
                            <tr>
                                {% for col in footer %}
                                    <td class="{{ col.class }}">{{ col.content }}</td>
                                {% endfor %}
                            </tr>
                            </tfoot>
                        {% endif %}

                        <tbody class="divide-y divide-gray-200">
                        {% for class, row in body %}
                            <tr class="{{ class }}">
                                {% for i, col in row %}
                                    {% if 0 == i and useLeftTh %}
                                        <th scope="row"
                                            class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 text-left">{{ col.content }}</th>
                                    {% else %}
                                        <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500">{{ col.content }}</td>
                                    {% endif %}
                                {% endfor %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
