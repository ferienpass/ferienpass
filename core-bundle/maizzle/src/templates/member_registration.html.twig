---
bodyClass: bg-gray-postmark-lighter
---

<extends src="src/layouts/master.html">
  <block name="template">
    <table class="email-wrapper w-full bg-gray-postmark-lighter font-sans">
      <tr>
        <td align="center">
          <table class="email-content w-full">
            <component src="src/components/header.html"></component>
            <raw>
              <tr>
                <td class="email-body w-full">
                  <table align="center" class="email-body_inner border-t-2 border-green-400 w-570 bg-white mx-auto sm:w-full">
                    <tr>
                      <td class="p-45">
                        <div class="text-base">
                          <h1 class="mt-0 text-2xl font-bold text-left text-gray-postmark-darker">Hallo {{ member_firstname|default }},</h1>
                          <p class="mt-6 mb-20 text-base leading-24 text-gray-postmark-dark">{{ email_text|nl2br }}</p>
                          <table align="center" class="w-full text-center my-30 mx-auto">
                            <tr>
                              <td align="center">
                                <table class="w-full">
                                  <tr>
                                    <td align="center" class="text-base">
                                      <a href="{{ link }}" class="button button--green" target="_blank">Account aktivieren</a>
                                    </td>
                                  </tr>
                                </table>
                              </td>
                            </tr>
                          </table>
                          <table class="body-sub">
                            <tr>
                              <td>
                                <p class="mt-6 mb-20 text-xs leading-24 text-gray-postmark-dark">Wenn Sie Probleme haben, den Button zu bet√§tigen, kopieren Sie diesen Link in Ihren Browser:</p>
                                <p class="mt-6 mb-20 text-xs leading-24 text-gray-postmark-dark">{{ link }}</p>
                              </td>
                            </tr>
                          </table>
                        </div>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </raw>
            <component src="src/components/footer.html"></component>
          </table>
        </td>
      </tr>
    </table>
  </block>
</extends>
