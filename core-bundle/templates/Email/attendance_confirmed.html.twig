<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="x-apple-disable-message-reformatting">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="format-detection" content="telephone=no, date=no, address=no, email=no">
    <!--[if mso]>
      <xml>
        <o:officedocumentsettings><o:pixelsperinch>96</o:pixelsperinch></o:officedocumentsettings>
      </xml>
    <![endif]-->
    <style>
      @media (max-width: 600px) {
        .button {
          width: 100% !important;
          text-align: center !important;
        }
      }
      @media (prefers-color-scheme: dark) {
        body,
        .email-body,
        .email-body_inner,
        .email-content,
        .email-wrapper,
        .email-masthead,
        .email-footer {
          background-color: #333333 !important;
          color: #fff !important;
        }
        p,
        ul,
        ol,
        blockquote,
        h1,
        h2,
        h3 {
          color: #fff !important;
        }
      }
      .hover-underline:hover {
        text-decoration-line: underline !important;
      }
      @media (max-width: 600px) {
        .sm-w-full {
          width: 100% !important;
        }
      }
    </style>
  </head>
  <body style="margin: 0; width: 100%; padding: 0; word-break: break-word; -webkit-font-smoothing: antialiased; background-color: #F2F4F6">
    <div role="article" aria-roledescription="email" aria-label lang="en" style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly">
      <table class="email-wrapper" style="width: 100%; background-color: #F2F4F6; font-family: 'Nunito Sans', -apple-system, 'Segoe UI', sans-serif" cellpadding="0" cellspacing="0" role="none">
        <tr>
          <td align="center" style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly;">
            <table class="email-content" style="width: 100%" cellpadding="0" cellspacing="0" role="none">
              <tr>
                <td align="center" class="email-masthead" style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; padding-top: 25px; padding-bottom: 25px; text-align: center; font-size: 16px">
                  {% if logoSrc|default %}
                  <img src="@{{ logoSrc }}" alt="Logo" width="200" style="border: 0; max-width: 100%; vertical-align: middle; line-height: 100%; height: auto">
                  {% endif %}
                </td>
              </tr>
              <tr>
                <td class="email-body" style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; width: 100%">
                  <table align="center" class="email-body_inner sm-w-full" style="margin-left: auto; margin-right: auto; width: 570px; background-color: #fff" cellpadding="0" cellspacing="0" role="none">
                    <tr>
                      <td style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; padding: 45px">
                        <div style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; font-size: 16px;">
                          <h1 style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-top: 0; text-align: left; font-size: 24px; font-weight: 700; color: #333333">{{ attendance.participant.firstname }} nimmt am Angebot teil!</h1>
                          <p style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-bottom: 20px; margin-top: 6px; font-size: 16px; line-height: 24px; color: #51545E">{{ content|nl2br }}</p>
                          <table align="center" style="width: 100%; background-color: #F4F4F7; padding: 24px" cellpadding="0" cellspacing="0" role="none">
                            {% import "@FerienpassCore/Macro/offer.html.twig" as offer_macro %}
                            <tr>
                              <td align="center" style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly;">
                                <h2 style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-bottom: 2px; margin-top: 0; text-align: center; font-size: 20px; font-weight: 700; color: #333333">{{ offer.name }}</h2>
                                <p style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-top: 0; text-align: center; font-size: 13px; color: #51545E">Veranstalter: {{ attendance.offer.hosts|map(h => h.name)|join(', ') }}</p>
                                <div style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-bottom: 20px; margin-top: 6px;">
                                  <p style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-bottom: 0; margin-top: 0; text-align: center; font-size: 16px; line-height: 24px; color: #51545E">
                                    <span style="font-weight: 500">Beginn:</span>
                                    {{ offer_macro.date_single(attendance.offer.dates|first) }}
                                  </p>
                                  <p style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-bottom: 0; margin-top: 0; text-align: center; font-size: 16px; line-height: 24px; color: #51545E">
                                    <span style="font-weight: 500;">Treffpunkt:</span>
                                    {{ attendance.offer.meetingPoint }}
                                  </p>
                                  {% if attendance.offer.bring %}
                                  <p style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-bottom: 0; margin-top: 0; text-align: center; font-size: 16px; line-height: 24px; color: #51545E">
                                    <span style="font-weight: 500;">Bitte mitbringen:</span>
                                    {{ attendance.offer.bring }}
                                  </p>
                                  {% endif %}
                                  <p style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-bottom: 0; margin-top: 0; text-align: center; font-size: 16px; line-height: 24px; color: #51545E">
                                    <span style="font-weight: 500;">Teilnahmegebühr:</span>
                                    {{ (attendance.participant.discounted|default ? attendance.offer.fee/2 : attendance.offer.fee)/100 }} &euro;
                                  </p>
                                </div>
                                {% if attendance.offer.requiresAgreementLetter %}
                                <p style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-bottom: 2px">
                                  <span style="margin-top: 2px; border-radius: 0.25rem; border-bottom-width: 4px; border-left-width: 8px; border-right-width: 8px; border-top-width: 4px; border-style: solid; border-color: #fdf6b2; background-color: #fdf6b2">
                                    <span style="margin-bottom: 0; margin-top: 0; font-size: 14px; line-height: 1.25rem; color: #8e4b10">Bitte Einverständniserklärung mitgeben.</span>
                                  </span>
                                </p>
                                <p style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-bottom: 20px; margin-top: 0; text-align: center; font-size: 13px; line-height: 24px; color: #51545E">
                                  Download unter:
                                  <a href="{{ baseUrl|default ~ '/' ~ attendance.offer.id }}" style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; color: #51545E; text-decoration-line: underline">{{ baseUrl|default ~ '/' ~ attendance.offer.id }}</a>
                                </p>
                                {% endif %}
                              </td>
                            </tr>
                          </table>
                          {% if action_url %}
                          <table align="center" style="margin-left: auto; margin-right: auto; margin-top: 30px; margin-bottom: 30px; width: 100%; text-align: center" cellpadding="0" cellspacing="0" role="none">
                            <tr>
                              <td align="center" style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly;">
                                <table style="width: 100%;" cellpadding="0" cellspacing="0" role="none">
                                  <tr>
                                    <td align="center" style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; font-size: 16px;">
                                      <a href="{{ action_url }}" class="button" target="_blank" style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; display: inline-block; color: #fff; text-decoration-line: none; background-color: #3869D4; border-top: 10px solid #3869D4; border-right: 18px solid #3869D4; border-bottom: 10px solid #3869D4; border-left: 18px solid #3869D4; border-radius: 3px; box-shadow: 0 2px 3px rgba(0, 0, 0, 0.16)">Anmeldungen einsehen</a>
                                    </td>
                                  </tr>
                                </table>
                              </td>
                            </tr>
                          </table>
                          {% endif %}
                          <table style="margin-top: 25px; border-top-width: 1px; padding-top: 25px; border-top-color: #EAEAEC; border-top-style: solid" cellpadding="0" cellspacing="0" role="none">
                            <tr>
                              <td style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly;">
                                <p style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-bottom: 20px; margin-top: 6px; font-size: 13px; line-height: 24px; color: #51545E">Der Termin ist als Kalenderdatei angehängt, Sie können das Angebot mit einem Klick Ihrem Kalender hinzufügen.</p>
                              </td>
                            </tr>
                          </table>
                        </div>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
              <tr>
                <td style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly;">
                  <table align="center" class="email-footer sm-w-full" style="margin-left: auto; margin-right: auto; width: 570px; text-align: center" cellpadding="0" cellspacing="0" role="none">
                    <tr>
                      <td align="center" style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; padding: 45px; font-size: 16px;">
                        {% if copyright|default %}
                        <p style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-bottom: 20px; margin-top: 6px; text-align: center; font-size: 13px; line-height: 24px; color: #A8AAAF">@{{ copyright | nl2br }}</p>
                        {% endif %} {% if footer_reason|default %}
                        <p style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-bottom: 20px; margin-top: 6px; text-align: center; font-size: 13px; line-height: 24px; color: #A8AAAF">@{{ footer_reason | nl2br }}</p>
                        {% endif %} {% if notificationLink|default %}
                        <p style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; margin-bottom: 20px; margin-top: 6px; text-align: center; font-size: 13px; line-height: 24px; color: #A8AAAF">
                          <a class="hover-underline" href="@{{ notificationLink }}" style="font-family: 'Segoe UI', sans-serif; mso-line-height-rule: exactly; font-weight: 500; color: #A8AAAF; text-decoration-line: none">Benachrichtigungseinstellungen</a>
                        </p>
                        {% endif %}
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </div>
  </body>
</html>
