{% trans_default_domain 'contao_exception' %}
<!DOCTYPE html>
<html lang="{{ language }}">
<head>
    <meta charset="utf-8">
    <title>{% block title %}{{ statusCode }} Error{% endblock %}</title>
    <meta name="generator" content="Contao Open Source CMS">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,shrink-to-fit=no">

    {% block javascripts %}
        <link rel="stylesheet" href="{{ asset ('css/admin.tailwind.css') }}">
        {{ importmap('admin') }}
    {% endblock %}

</head>
<body>
<div class="min-h-screen bg-gray-100 flex flex-col">
    <div class="px-4 md:px-8 lg:px-12 py-4 sm:py-6">
        {% if logoSrc is defined %}
        <a href="/" class="">
            <img class="max-h-5 max-w-xs px-8 w-auto mx-auto" src="{{ logoSrc }}" alt="Logo"/>
        </a>
        {% endif %}
    </div>
    <div class="flex-1 flex flex-col items-center justify-center text-center px-2 sm:px-4 py-6">
        <h1 class="text-4xl tracking-tight leading-10 font-extrabold text-gray-900 sm:text-4xl sm:leading-none md:text-5xl">
            {{ block('title') }}
        </h1>
        <div class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
            {% block description %}{% endblock %}
        </div>
        {% block image %}
            <img class="mt-10 sm:mt-16 h-auto w-full max-w-xs"
                 src="{{ asset('images/error500.svg', 'ferienpass_core') }}"
                 alt=""/>
        {% endblock %}
    </div>
    <div class="flex justify-center py-4 sm:py-6">
        <a href="https://ferienpass.online" target="_blank"
           class="opacity-50 filter-grayscale hover:filter-none hover:opacity-100 transition duration-100">
            <img class="h-6" src="{{ asset('img/ferienpass-logo.svg', 'ferienpass_core') }}" alt="">
        </a>
    </div>
</div>
{% block scripts %}
{% endblock %}
</body>
</html>
