<div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 lg:px-12 py-4 sm:py-6 md:py-12 lg:px-16">

    {% embed '@FerienpassHostPortal/fragment/_box_33_66.html.twig' with {
        'headline': 'changePassword.headline'|trans,
        'caption': 'changePassword.caption'|trans
    } %}
        {% block box %}

            {{ form_start(form) }}

            <div class="grid gap-6 sm:grid-cols-6">
                <div class="sm:col-span-4">
                    {{ form_row(form.oldPassword) }}
                </div>
                {% for field in form.password %}
                    <div class="sm:col-span-3">
                        {{ form_row(field) }}
                    </div>
                {% endfor %}
                <div class="sm:col-span-6">
                    {{ form_rest(form) }}
                </div>
            </div>

            {{ form_end(form) }}

        {% endblock %}
    {% endembed %}

</div>
