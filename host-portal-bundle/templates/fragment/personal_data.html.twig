<div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 lg:px-12 py-4 sm:py-6 md:py-12 lg:px-16">

    {% embed '@FerienpassHostPortal/fragment/_box_33_66.html.twig' with {
        'headline': 'personalData.headline'|trans,
        'caption': 'personalData.caption'|trans
    } %}
        {% trans_default_domain 'contao_default' %}
        {% block box %}

            {{ form_start(form) }}

            <div class="grid gap-6 sm:grid-cols-8">
                <div class="sm:col-span-4">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="sm:col-span-4">
                    {{ form_row(form.lastname) }}
                </div>
                <div class="sm:col-span-5">
                    {{ form_row(form.email) }}
                </div>
                <div class="sm:col-span-3 sm:col-start-1">
                    {{ form_row(form.phone) }}
                </div>
                <div class="sm:col-span-3">
                    {{ form_row(form.mobile) }}
                </div>
                <div class="sm:col-span-8">
                    {{ form_rest(form) }}
                </div>
            </div>

            {{ form_end(form) }}

        {% endblock %}
    {% endembed %}
</div>
